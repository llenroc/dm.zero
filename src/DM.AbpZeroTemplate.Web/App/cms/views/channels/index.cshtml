@using DM.AbpZeroTemplate.Localization

<div ng-controller="cms.views.channels.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-12">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>@L("Channels")</span><small>@L("ChannelsHeaderInfo")</small>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject bold uppercase">
                            @L("ChannelTree")
                        </span>
                    </div>
                    <div class="actions">
                        <a ng-if="vm.permissions.createChannelTree" ng-click="vm.channelTree.addChannel(null)" class="btn btn-circle btn-default">
                            <i class="fa fa-plus"></i>@L("AddRootChannel")
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div id="ChannelEditTree"></div>
                    <div ng-if="!vm.channelTree.channelCount" class="text-muted">
                        @L("NoChannelDefinedYet")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
