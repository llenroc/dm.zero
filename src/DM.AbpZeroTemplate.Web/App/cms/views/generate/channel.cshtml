<div ng-controller="cms.views.generate.channel as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-12">
            <div class="page-head">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject bold uppercase">
                            @L("GenerateChannel")
                        </span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="col-lg-9">
                        <div class="ibox-content" ng-show="vm.start">
                            <h5>@L("GenerateProcess")：</h5>
                            <div class="progress progress-striped active" style="height:20px;background-color:#C5C5C5">
                                <div style="width:{{vm.process}}%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="{{vm.process}}" role="progressbar" class="progress-bar">
                                    <span class="sr-only" style="position:relative;">{{vm.process}}% Complete (success)</span>
                                </div>
                            </div>
                        </div>
                        <div class="row" ng-show="!vm.start">
                            <div class="col-sm-9">
                                <div id="treeview-selectable" class=""></div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary" id="btn-genetate" ng-click="vm.generate()">@L("GenerateChannel")</button>
                                </div>
                                <div class="form-group">
                                    <span class="clickable-item text-muted" ng-if="!vm.advancedFiltersAreShown" ng-click="vm.advancedFiltersAreShown=!vm.advancedFiltersAreShown"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                                    <span class="clickable-item text-muted" ng-if="vm.advancedFiltersAreShown" ng-click="vm.advancedFiltersAreShown=!vm.advancedFiltersAreShown"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                                </div>
                                <div class="form-group" ng-if="vm.advancedFiltersAreShown">
                                    <label for="input-select-node" class="sr-only">@L("SearchTree"):</label>
                                    <input type="text" class="form-control" id="input-select-node" placeholder="@L("ChannelName")..." ng-model="vm.searchWords">
                                </div>
                                <div class="form-group" ng-if="vm.advancedFiltersAreShown">
                                    <button type="button" class="btn btn-success select-node" id="btn-select-node" ng-click="vm.channelTree.selectNodes()">@L("SelectChannel")</button>
                                </div>
                                <div class="form-group" ng-if="vm.advancedFiltersAreShown">
                                    <button type="button" class="btn btn-danger select-node" id="btn-unselect-node" ng-click="vm.channelTree.unSelectNodes()">@L("UnSelectChannel")</button>
                                </div>
                                <div class="form-group" ng-if="vm.advancedFiltersAreShown">
                                    <button type="button" class="btn select-node" id="btn-toggle-selected" ng-click="vm.channelTree.toggleNodes()">@L("ToggleChannel")</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Required Javascript -->
<script src="~/Scripts/bootstrap-treeview.js"></script>